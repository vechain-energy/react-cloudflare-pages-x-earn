{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "data/**",
        "dist/**",
        "website/dist/**",
        "contracts/deployments/**"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "contracts:deploy:solo",
        "website:start",
        "website:backend"
      ]
    },
    "testnet": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "contracts:deploy:testnet",
        "website:start:testnet",
        "website:backend"
      ]
    },
    "install:all": {
      "cache": false,
      "outputs": [],
      "dependsOn": [
        "contracts:install",
        "website:install",
        "contracts:gen:randompk"
      ]
    },
    "contracts:install": {
      "cache": false
    },
    "website:install": {
      "cache": false,
      "outputs": ["apps/website/.parcel-cache/**"]
    },
    "contracts:gen:randompk": {
      "cache": false
    },
    "contracts:solo:up": {
      "cache": false
    },
    "contracts:deploy:solo": {
      "cache": false,
      "dependsOn": [
        "contracts:solo:up"
      ]
    },
    "website:start": {
      "cache": false,
      "outputs": ["apps/website/.parcel-cache/**"]
    },
    "website:start:testnet": {
      "cache": false,
      "outputs": ["apps/website/.parcel-cache/**"]
    },
    "website:backend": {
      "cache": false,
      "outputs": ["apps/website/.parcel-cache/**"]
    },
    "clear": {
      "cache": false,
      "outputs": [
        "data/**",
        "dist/**",
        "website/dist/**",
        "contracts/deployments/**",
        "apps/website/.parcel-cache/**"
      ],
      "dependsOn": [
        "contracts:solo:down"
      ]
    },
    "contracts:solo:down": {
      "cache": false
    }
  }
}