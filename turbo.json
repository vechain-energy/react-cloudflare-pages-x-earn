{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": ["MNEMONIC", "NODE_ENV", "ENV_FILE"],
  "globalDependencies": [
    ".env",
    ".env.local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "data/**",
        "dist/**",
        "website/dist/**",
        "contracts/deployments/**"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "website:start",
        "website:queue-handler",
        "website:backend"
      ],
      "inputs": [
        ".env.local",
        ".env.testnet",
        ".env"
      ]      
    },
    "testnet": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "website:start:testnet",
        "website:queue-handler:testnet",
        "website:backend:testnet"
      ],
      "inputs": [
        ".env.local",
        ".env.testnet",
        ".env"
      ]
    },
    "install:all": {
      "cache": false,
      "outputs": [],
      "dependsOn": [
        "contracts:install",
        "website:install"
      ]
    },
    "contracts:install": {
      "cache": false
    },
    "website:install": {
      "cache": false,
      "outputs": [
        "apps/website/.parcel-cache/**"
      ]
    },
    "contracts:solo:up": {
      "cache": false,
      "outputs": [
        "data/thor/**"
      ]
    },
    "contracts:deploy:solo": {
      "cache": false,
      "dependsOn": [
        "contracts:solo:up"
      ],
      "outputs": [
        "contracts/deployments/vechain_solo"
      ]
    },
    "contracts:deploy:testnet": {
      "cache": false,
      "outputs": [
        "contracts/deployments/vechain_testnet"
      ]
    },
    "website:start": {
      "cache": false,
      "dependsOn": [
        "contracts:deploy:solo"
      ],
      "outputs": [
        "apps/website/.parcel-cache/**"
      ]
    },
    "website:start:testnet": {
      "cache": false,
      "dependsOn": [
        "contracts:deploy:testnet"
      ],
      "outputs": [
        "apps/website/.parcel-cache/**"
      ]
    },
    "website:backend": {
      "cache": false,
      "dependsOn": [
        "contracts:deploy:solo"
      ],
      "outputs": [
        "apps/website/.wrangler/**"
      ]
    },
    "website:backend:testnet": {
      "cache": false,
      "dependsOn": [
        "contracts:deploy:testnet"
      ],
      "outputs": [
        "apps/website/.wrangler/**"
      ],
      "env": [
        "ENV_FILE",
        "NODE_ENV",
        "MNEMONIC"
      ]
    },
    "clear": {
      "cache": false,
      "outputs": [
        "data/**",
        "dist/**",
        "website/dist/**",
        "contracts/deployments/**",
        "apps/website/.parcel-cache/**"
      ],
      "dependsOn": [
        "contracts:solo:down"
      ]
    },
    "contracts:solo:down": {
      "cache": false
    }
  }
}